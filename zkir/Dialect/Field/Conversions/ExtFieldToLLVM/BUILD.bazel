        "ExtFieldToLLVM.cpp.inc": ["-gen-rewriters"],
        "ExtFieldToLLVM.md": ["-gen-pass-doc"],
    },
    tblgen = "@llvm-project//mlir:mlir-tblgen",
    td_file = "ExtFieldToLLVM.td",
    deps = [
        "//zkir/Dialect/Field/IR:td_files",
